<Window x:Class="Lab5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab5"
        mc:Ignorable="d"
        Title="Main" Height="369" Width="800">
    <Window.DataContext>
        <local:Student/>
    </Window.DataContext>
    <Grid RenderTransformOrigin="0.459,0.499" Margin="0,0,0,17">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="27*"/>
            <ColumnDefinition Width="373*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="textBox1" d:Text="Wololo" Text="{Binding Path=Name}" 
            HorizontalAlignment="Left" Margin="474,10,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <TextBox x:Name="textBox2" Text="{Binding Path=Group.Name}"
            HorizontalAlignment="Left" Margin="616,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="1" RenderTransformOrigin="0.5,0.5">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="359.648"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Button Content="Button" Grid.Column="1" Margin="19,33,602,195" RenderTransformOrigin="0.73,0.504" Click="Button_Click"/>
        <Button Content="Button" Grid.Column="1" Margin="274,33,347,195"/>

    </Grid>
</Window>
