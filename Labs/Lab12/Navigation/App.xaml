<Application x:Class="Navigation.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Navigation"
             xmlns:views="clr-namespace:Navigation.Views"
             xmlns:vms ="clr-namespace:Navigation.ViewModels">
    <Application.Resources>
        <DataTemplate DataType="{x:Type vms:MainViewModel}">
            <views:MainWindow />            
        </DataTemplate>

        <DataTemplate DataType="{x:Type vms:AddProductViewModel}">
            <views:AddProductWindow />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vms:EditProductViewModel}">
            <views:EditProductWindow />
        </DataTemplate>
    </Application.Resources>
</Application>
