<Window x:Class="Authorization.Windows.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registration" Height="539" Width="320" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" Background="#F7F7F7">
    <Border Margin="16" Padding="16" Background="White" CornerRadius="8" BorderBrush="#DDDDDD" BorderThickness="1">
        <StackPanel>
            <TextBlock Text="Регистрация" FontSize="20" FontWeight="Bold" Margin="0,0,0,16" HorizontalAlignment="Center"/>
            
            <TextBlock Text="Логин" Margin="0,0,0,2"/>
            <TextBox x:Name="tbLogin" Margin="0,0,0,8"/>

            <TextBlock Text="Имя" Margin="0,0,0,2"/>
            <TextBox x:Name="tbFirstName" Margin="0,0,0,8"/>

            <TextBlock Text="Фамилия" Margin="0,0,0,2"/>
            <TextBox x:Name="tbLastName" Margin="0,0,0,8"/>

            <TextBlock Text="Отчество" Margin="0,0,0,2"/>
            <TextBox x:Name="tbPatronymic" Margin="0,0,0,12"/>

            <TextBlock Text="E-mail" Margin="0,0,0,2"/>
            <TextBox x:Name="tbEmail" Margin="0,0,0,8"/>

            <TextBlock Text="Телефон" Margin="0,0,0,2"/>
            <TextBox x:Name="tbPhone" Margin="0,0,0,8"/>

            <TextBlock Text="Пароль" Margin="0,0,0,2"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,8"/>

            <TextBlock Text="Подтвердите пароль" Margin="0,0,0,2"/>
            <PasswordBox x:Name="ConfirmPasswordBox" Margin="0,0,0,8"/>

            <Button Content="Зарегистрироваться" Click="RegisterButton_Click" Background="#007BFF" Foreground="White"
                    Padding="8,4" FontWeight="Bold" BorderThickness="0" Margin="0,0,0,8"/>
        </StackPanel>
    </Border>
</Window>
