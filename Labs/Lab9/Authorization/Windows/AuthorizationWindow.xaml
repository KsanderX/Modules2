<Window x:Class="Authorization.Windows.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AuthorizationWindow"
        Height="364" Width="282"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="#F7F7F7">
    <Border Margin="16" Padding="16" Background="White" CornerRadius="8" BorderBrush="#DDDDDD" BorderThickness="1">
        <StackPanel>
            <TextBlock Text="Авторизация" FontSize="20" FontWeight="Bold" Margin="0,0,0,16" HorizontalAlignment="Center"/>            
            <TextBlock Text="Логин" Margin="0,0,0,2"/>
            <TextBox x:Name="LoginTextBox" Margin="0,0,0,12"/>
            <TextBlock Text="Пароль" Margin="0,0,0,2"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,16"/>            
            <Button Content="Войти" Click="LoginButton_Click"
                    Background="#007BFF" Foreground="White"
                    Padding="8,4" FontWeight="Bold"
                    BorderThickness="0" Margin="0,0,0,8"/>
            <TextBlock Text="Нет аккаунта?" HorizontalAlignment="Center" Margin="0,0,0,4"/>
            <Button Content="Зарегистрироваться" Click="RegisterButton_Click"
                    Background="#E5EAF1" Foreground="#2D3A4A"
                    Padding="8,4" FontWeight="Normal"
                    BorderThickness="0" Margin="0,0,0,8"/>
            <Button Content="Выйти" Click="btnExit_Click" Background="#e90000" Foreground="White" Padding="8,4"
                    FontWeight="Bold" BorderThickness="0"/>
        </StackPanel>
    </Border>
</Window>
